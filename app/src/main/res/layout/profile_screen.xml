<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_row_profile_page"
        android:paddingLeft="@dimen/right_left_padding"
        android:paddingRight="@dimen/right_left_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big"
            android:layout_centerVertical="true"
            android:textColor="@color/black_payment_screen_text_50_transp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="First Name"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:layout_marginLeft="@dimen/margin_left_edit_text_profile_page"
            android:layout_marginStart="112dp"
            android:background="@color/white"
            android:textColor="@color/black_payment_screen_text"
            android:id="@+id/fname_field"
            android:hint="Your First Name"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_seperator"
        android:layout_marginLeft="@dimen/right_left_padding"
        android:background="@color/grey_border_numeric_qty"
        android:layout_marginRight="@dimen/right_left_padding"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_row_profile_page"
        android:paddingLeft="@dimen/right_left_padding"
        android:paddingRight="@dimen/right_left_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_big"
            android:textColor="@color/black_payment_screen_text_50_transp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Last Name"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="textPersonName"
            android:textSize="@dimen/text_big"
            android:imeOptions="actionNext"
            android:layout_marginLeft="@dimen/margin_left_edit_text_profile_page"
            android:layout_marginStart="112dp"
            android:background="@color/white"
            android:textColor="@color/black_payment_screen_text"
            android:id="@+id/lname_field"
            android:hint="Your Last Name"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_seperator"
        android:layout_marginLeft="@dimen/right_left_padding"
        android:background="@color/grey_border_numeric_qty"
        android:layout_marginRight="@dimen/right_left_padding"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_row_profile_page"
        android:paddingLeft="@dimen/right_left_padding"
        android:paddingRight="@dimen/right_left_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black_payment_screen_text_50_transp"
            android:text="Gender"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:textSize="@dimen/text_big"
            android:entries="@array/gender_options"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_left_edit_text_profile_page"
            android:layout_marginStart="112dp"
            android:textColor="@color/black_payment_screen_text"
            android:id="@+id/gender_data"
            android:text="MALE"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_seperator"
        android:layout_marginLeft="@dimen/right_left_padding"
        android:background="@color/grey_border_numeric_qty"
        android:layout_marginRight="@dimen/right_left_padding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_row_profile_page"
        android:paddingLeft="@dimen/right_left_padding"
        android:paddingRight="@dimen/right_left_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_big"
            android:textColor="@color/black_payment_screen_text_50_transp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="DOB"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:inputType="none"
            android:textSize="@dimen/text_big"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_left_edit_text_profile_page"
            android:layout_marginStart="112dp"
            android:textColor="@color/black_payment_screen_text"
            android:id="@+id/dob_field"
            android:text="26/08/1986"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_seperator"
        android:layout_marginLeft="@dimen/right_left_padding"
        android:background="@color/grey_border_numeric_qty"
        android:layout_marginRight="@dimen/right_left_padding"/>
</LinearLayout>
